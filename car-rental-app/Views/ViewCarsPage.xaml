<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="car_rental_app.Views.ViewCarsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:car_rental_app.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            x:Name="RentedCarsStackPanel"
            Grid.Column="0"
            Grid.Row="1"
            Padding="24">   
            <TextBlock Text="No reservations" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
            <CalendarDatePicker x:Name="FromCalendarPicker" VerticalAlignment="Center" Width="160" PlaceholderText="From:" DateChanged="FromCalendarPicker_DateChanged" />
            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA62;" Margin="24 0" />
            <CalendarDatePicker x:Name="ToCalendarPicker" VerticalAlignment="Center" Width="160" PlaceholderText="To:" DateChanged="ToCalendarPicker_DateChanged" />
            <Button Name="SearchButton" Margin="24 0" IsEnabled="False" Click="SearchButtonClick">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="Search" />
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE721;"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Grid
            Name="NoDatesSelectedStackPanel"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            CornerRadius="8"
            Padding="24"
            BorderThickness="1"
            Height="Auto"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            Margin="24">
            <TextBlock Text="Select a date range to view the available cars" HorizontalAlignment="Center" />
        </Grid>
        
        <ScrollViewer Name="CarsListScrollViewer" Grid.Row="1" Grid.Column="1" Visibility="Collapsed">
            <ItemsControl x:Name="tStack" ItemsSource="{x:Bind cars}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VariableSizedWrapGrid Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            CornerRadius="8"
                            Padding="24"
                            BorderThickness="1"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            Margin="24"
                            RowSpacing="24"
                            ColumnSpacing="10"
                            >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" Grid.Row="0" Style="{StaticResource SubtitleTextBlockStyle}" Grid.ColumnSpan="2" TextWrapping="NoWrap"/>
                            <TextBlock Text="{Binding Size}" Grid.Row="1" Style="{StaticResource BodyStrongTextBlockStyle}" Grid.ColumnSpan="2" />

                            <TextBlock Text="{Binding TransmissionType}" Grid.Row="2" Grid.Column="0" />
                            <TextBlock Text="{Binding FuelType}" Grid.Row="2" Grid.Column="1" />

                            <TextBlock Text="{Binding PricePerDay}" Grid.Row="3">
                                <Run Text="{Binding PricePerDay}" />
                                <Run Text="$" />
                            </TextBlock>
                            <TextBlock Text="{Binding SeatNumber}" Grid.Row="4" />
                            <HyperlinkButton Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Tag="{Binding Id}" Click="ReserveClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Reserve" VerticalAlignment="Center" />
                                    <FontIcon FontSize="12" FontFamily="Segoe MDL2 Assets" Glyph="&#xE76C;" VerticalAlignment="Center"/>
                                </StackPanel>
                            </HyperlinkButton>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
